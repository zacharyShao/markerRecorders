<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="btn_bg">#FF222222</color>
    <color name="btn_fg">#FF555555</color>
    <color name="btn_pressed_bg">#FFFFCC00</color>
    <color name="btn_pressed_fg">#FF555555</color>
    <color name="btn_selected_bg">#FFFFFFFF</color>
    <color name="btn_selected_fg">#FF000000</color>
    <declare-styleable name="PenToolButton"><attr format="dimension" name="strokeWidthMax"/><attr format="dimension" name="strokeWidthMin"/><attr format="reference" name="interpolator"/></declare-styleable>
    <declare-styleable name="PenTypeButton"><attr name="penType">
	        <enum name="whiteboard" value="0"/>
	        <enum name="feltTip" value="1"/>
	        <enum name="airbrush" value="2"/>
	        <enum name="fountainpen" value="3"/>
        </attr></declare-styleable>
    <declare-styleable name="SwatchButton"><attr format="color" name="color"/></declare-styleable>
    <dimen name="action_bar_height">48dp</dimen>
    <dimen name="action_bar_logo_width">48dip</dimen>
    <dimen name="action_button_padding_v">4dp</dimen>
    <dimen name="action_button_width">48dp</dimen>
    <dimen name="default_pen_size_max">24dp</dimen>
    <dimen name="default_pen_size_min">4dp</dimen>
    <dimen name="status_bar_height">25dp</dimen>
    <dimen name="title_size">20sp</dimen>
    <dimen name="tool_palette_gutter">6dp</dimen>
    <dimen name="tools_margin_top">@dimen/action_bar_height</dimen>
    <dimen name="ui_font_size">18sp</dimen>
    <drawable name="actionbar_button_bg">#00000000</drawable>
    <drawable name="actionbar_button_pressed_bg">#60FFFFFF</drawable>
    <drawable name="actionbar_button_selected_bg">#CCFFCC00</drawable>
    <string name="about_text">About</string>
    <string name="about_title">About Markers</string>
    <string name="alert">Alert</string>
    <string name="app_name">Markers</string>
    <string name="cancel">Cancel</string>
    <string name="confirm">Confirm</string>
    <string name="discard_video_msg">Would you like to discard recording?</string>
    <string name="finish">Finish</string>
    <string name="next">Next</string>
    <string name="orientation">portrait</string>
    <string name="processing">Processing…</string>
    <string name="qr_title">QR Code for Markers</string>
    <string name="recorder_state_complete">Video Recording Complete.</string>
    <string name="recorder_state_min_recorded">Minimum video recorded.</string>
    <string name="recorder_state_min_video_crossed">Recording and Minimum recording reached…</string>
    <string name="recorder_state_press_to_record">Press to record…</string>
    <string name="recorder_state_recording">Recording…</string>
    <string name="video_saved_path">Your video is saved at</string>
    <style name="ActionBar">
        <item name="android:textSize">@dimen/ui_font_size</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    <style name="ActionBar.Bar">
        <item name="android:background">#FF000000</item>
    </style>
    <style name="ActionBar.Button" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">@dimen/ui_font_size</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="ActionBar.Icon">
        <item name="android:background">@drawable/action_button_bg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/action_button_width</item>
        <item name="android:paddingTop">@dimen/action_button_padding_v</item>
        <item name="android:paddingBottom">@dimen/action_button_padding_v</item>
    </style>
    <style name="ActionBar.Menu">
        <item name="android:background">#FF000000</item>
        <item name="android:gravity">right|top</item>
    </style>
    <style name="ActionBar.MenuItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/ui_font_size</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/action_button_bg</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="ActionBar.Text">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Dialog_loading" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Dialog_loading_noDim" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>